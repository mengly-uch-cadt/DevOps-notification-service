generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
model accesses {
  id             Int      @id @default(autoincrement())
  global_id      String   @unique(map: "global_id") @db.VarChar(36)
  allow_endpoint String   @db.VarChar(255)
  token          String   @unique(map: "token") @db.Char(64)
  created_at     DateTime @db.DateTime(0)
  updated_at     DateTime @db.DateTime(0)

  @@index([allow_endpoint], map: "accesses_index_4")
}

model admins {
  id         Int      @id @default(autoincrement())
  global_id  String   @unique(map: "global_id") @db.VarChar(36)
  user_id    Int
  name       String   @db.VarChar(255)
  created_at DateTime @db.DateTime(0)
  updated_at DateTime @db.DateTime(0)
  users      users    @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "admins_ibfk_1")

  @@index([user_id], map: "admins_index_0")
}

/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
model notifications {
  id         Int      @id @default(autoincrement())
  global_id  String   @unique(map: "global_id") @db.VarChar(36)
  user_id    Int
  title      String   @db.VarChar(255)
  body       String   @db.Text
  status     String   @db.VarChar(10)
  created_at DateTime @db.DateTime(0)
  updated_at DateTime @db.DateTime(0)
  users      users    @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "notifications_ibfk_1")

  @@index([user_id], map: "notifications_index_1")
  @@index([user_id, status], map: "notifications_index_2")
}

model settings {
  id          Int      @id @default(autoincrement())
  global_id   String   @unique(map: "global_id") @db.VarChar(36)
  slug        String   @db.VarChar(100)
  key         String   @db.VarChar(255)
  value       String   @db.Text
  description String?  @db.Text
  created_at  DateTime @db.DateTime(0)
  updated_at  DateTime @db.DateTime(0)

  @@unique([slug, key], map: "settings_index_3")
}

model users {
  id            Int             @id @default(autoincrement())
  global_id     String          @unique(map: "global_id") @db.VarChar(36)
  user_id       String          @unique(map: "user_id") @db.VarChar(50)
  name          String          @db.VarChar(255)
  created_at    DateTime        @db.DateTime(0)
  updated_at    DateTime        @db.DateTime(0)
  admins        admins[]
  notifications notifications[]
}
